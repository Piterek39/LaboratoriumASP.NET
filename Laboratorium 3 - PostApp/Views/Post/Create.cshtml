<form asp-controller="Post" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Content" rows="4">Zawartosc </label>
        <input class="form-control" asp-for="Content" />
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Autor">Autor </label>
        <input class="form-control" asp-for="Autor" />
        <span class="text-danger" asp-validation-for="Autor"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tag">Tag </label>
        <input class="form-control" asp-for="Tag" />
        <span class="text-danger" asp-validation-for="Tag"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Comment">Komentarz </label>
        <input class="form-control" asp-for="Comment" />
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Zapisz</button>
    </div>


</form>